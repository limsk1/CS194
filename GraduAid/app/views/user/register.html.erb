<%= form_for @user, :url => {:action => "post_register"} do |form| %>
  <table class="center_align">
    <tr>
      <td>
        First name:
      </td>
      <td>
      <%= form.text_field(:first_name) %>
      </td>
    </tr>
    <tr>
      <td>
        Last name:
      </td>
      <td>
        <%= form.text_field(:last_name) %>
      </td>
    </tr>
    <tr>
      <td>
        Username:
      </td>
      <td>
        <%= form.text_field(:login) %>
      </td>
    </tr>
    <tr>
      <td>
        Password:
      </td>
      <td>
        <%= form.password_field(:password) %>
      </td>
    </tr>
    <tr>
      <td>
        Password confirmation:
      </td>
      <td>
        <%= form.password_field(:password_confirmation) %>
      </td>
    </tr>
    <tr>
      <td>
        Major:
      </td>
      <td>
        <%= form.text_field(:major) %>
      </td>
    </tr>
    <tr>
      <td>
        Courses Taken:
      </td>
      <td>
        <%= form.text_field(:courses) %>
      </td>
    </tr>

    
  </table>
  <%= submit_tag "Register" %>
<% end %>

<ul class="alert">
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
