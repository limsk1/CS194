<%= form_tag("/user/post_login", :method => "post") do %>
  <table class="center_align">
    <tr>
      <td>
        Username:
      </td>
      <td>
        <%= text_field_tag(:login) %>
      </td>
    </tr>
    <tr>
      <td>
        Password:
      </td>
      <td>
        <%= password_field_tag(:password) %>
      </td>
    </tr>
  </table>
  <%= submit_tag("Log in") %>
<% end %>

<% if flash[:notice] %>
  <div class="alert"><%= flash[:notice] %></div>
<% end %>

<p>
Want to be a new member? Register now!
<a href = "/user/register">Register</a>
</p>


