
<script type='text/javascript'>
function renderTrackPage(id) {
    document.getElementById('section').src = 'track?track_id='+ id;
}
</script>


 <!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Case</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href='/' id="header">GraduAid</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      	<li><a href='/user/listClasses' id='navigator'><span class="glyphicon glyphicon-user"></span>
       	<% if session[:curr_id]!=nil then %>
				<%= User.find(session[:curr_id]).first_name + "'s "%>
		<% end %>
		Profile
   		</a></li>
      <li><a href='/user/logout' id='navigator'><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
    </ul>
    <form class="navbar-form navbar-right" role="search">
	  <div class="form-group">
	    <input type="text" class="form-control" placeholder="Search">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	</form>
  </div>
</nav>

<div>
	<div class="col-sm-3 col-md-2 sidebar">
		<ul class="nav nav-sidebar">
			<li><b>My Track</b></li>
			<% if @my_track!=nil then%>
				<li class="active">
					<%= link_to "javascript:renderTrackPage(" + @my_track.id.to_s + ");" do%>
					<%=@my_track.name%>
					<%end%>
				</li>
			<%end%>
			<li><b>Other Tracks</b></li>
			<% @tracks.each do |track| %>
				<li class="active">
					<%= link_to "javascript:renderTrackPage(" + track.id.to_s + ");" do%>
					<%=track.name%>
					<% end %>
				</li>
			<%end%>
		</ul>
	</div>
	<div class="col-sm-9 col-md-10 main">
		<iframe src="track" frameBorder="0"></iframe>
	</div>
	<div class="col-sm-3 col-md-2 sidebar pull-right">
		<h3>Potential Classes</h3>
	</div>
</div>

<!-- <div>
<h3>Potential Classes</h3>
<div id="potential display"></div>
</div> -->

</body>
</html>