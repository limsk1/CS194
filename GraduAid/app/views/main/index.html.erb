<script type='text/javascript'>
function renderTrackPage(id) {
    document.getElementById('section').src = 'track?track_id='+ id;
}
</script>

<ul>
<li><b>My Track</b></li>
<% if @my_track!=nil then%>
<li>
<%= link_to "javascript:renderTrackPage(" + @my_track.id.to_s + ");" do%>
<%=@my_track.name%>
<%end%>
</li>
<%end%>
<li><b>Other Tracks</b></li>
<% @tracks.each do |track| %>
<li>
<%= link_to "javascript:renderTrackPage(" + track.id.to_s + ");" do%>
<%=track.name%>
<% end %>
</li>
<% end %>
</ul>

<iframe id="section" src="track" frameBorder="0"></iframe>

<div id="aside">
<h3>Potential Classes</h3>
<div id="potential display"></div>
</div>