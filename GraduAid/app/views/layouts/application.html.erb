<!-- Title -->
<!DOCTYPE html>
<html>
<head>
  <title>GraduAid</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="headerBlock">
	<table id="headerTable">
		<tr>
			<% if session[:curr_id]!=nil then %>
			<td id="header">
				<a href = '/' id="header"><h1>GraduAid</h1></a>
			</td>
			<td id="greeting">
				<%= "Hi, " + User.find(session[:curr_id]).first_name + "! "%>
			</td>
			<td id="navigator">
					<a href = '/user/logout' id='navigator'>Log Out</a>
					<a href = '/user/listClasses' id='navigator'>My courses</a>
				<% end %>
			</td>
		</tr>
	</table>
</div>



<%= yield %>

<div id="footer">
GraduAid
</div>

</body>
</html>
